# Maintainer: Vikas Raj <sudo@vikasraj.dev>

pkgname={{NAME}}
pkgver=0.1.0
# pkgver={{VERSION}}
pkgrel=1
pkgdesc={{DESC}}
arch=('x86_64' 'aarch64' 'armv7')
url={{URL}}
license=('GPL')
provides=($pkgname)
conflicts=($pkgname)

source_x86_64=(
    "git+$url/releases/download/v$pkgver/$pkgname-x86_64-unknown-linux-gnu.tar.gz"
)
md5sums_x86_64=(SKIP)

source_armv7=(
    "git+$url/releases/download/v$pkgver/$pkgname-armv7-unknown-linux-gnueabihf.tar.gz"
)
md5sums_armv7=(SKIP)

source_aarch64=(
    "git+$url/releases/download/v$pkgver/$pkgname-aarch64-unknown-linux-gnu.tar.gz"
)
md5sums_aarch64=(SKIP)

package() {
	install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
